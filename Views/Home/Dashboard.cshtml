
<p class="h2 mb-5">
    <span >
        Dashboard
    </span>
    <span  >
       <a href="newProduct" class="ml-2">Products</a> 
    </span>
    <span >
       <a href="newOrder" class="ml-2">Orders</a> 
    </span>
    <span >
       <a href="newCustomer" class="ml-2">Customers</a> 
    </span>
    <span >
       <a href="#" class="ml-2">Settings</a> 
    </span>
    <span class="float-right">
        <a href="logout" class="h4 ml-5">Logout</a>
    </span>
</p>

<div class="row">
    <div class="col-2">
        <input type="text" name="search">
        <input type="submit" value="Filter">
    </div>
    <div class="col">
        @foreach(Product one in ViewBag.someProducts)
        { 
        <div class="d-inline-block">
            <div class="card" style="width: 12rem;">
            <img src="@one.ImgUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@one.Name</h5>
                <p class="card-text">(@one.Inventory left)</p>
            </div>
            </div>

        </div>
        }

        <div class="mt-5">
            <p class="h3">Recent Orders</p>
            @foreach(Order two in ViewBag.someOrders)
            {
                <p class="ml-3">@two.Customer.Name purchased @two.Quantity @two.Product.Name</p>
            }
        </div>

        <div class="mt-5">
            <p class="h3">New Customers</p>
            @foreach(Customer three in ViewBag.someCustomers)
            {
                <p class="ml-3">@three.Name joined the store</p>
            }
        </div>


    </div>

</div>