@model Order
<p class="h2 mb-5">
    <span >
        <a href="success"> Dashboard</a>
    </span>
    <span  >
       <a href="newProduct" class="ml-2">Products</a> 
    </span>
    <span  class="ml-2">
       Orders
    </span>
    <span >
       <a href="newCustomer" class="ml-2">Customers</a> 
    </span>
    <span >
       <a href="#" class="ml-2">Settings</a> 
    </span>
    <span class="float-right">
        <a href="logout" class="h4 ml-5">Logout</a>
    </span>
</p>

<p class="h4">Add a new order</p>
<form action="addOrder" method="post">
    <div>Customers
        <select asp-for="CustomerId">
            @foreach(Customer one in ViewBag.allCustomers)
            {
                <option value="@one.CustomerId">@one.Name</option>
            }
        </select>
    </div>

    <span class="text-danger" asp-validation-for="Quantity"></span>
    <div>
        Order 
        <select asp-for="Quantity">
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
            
        </select>
        <select asp-for="ProductId">
            @foreach(Product two in ViewBag.allProducts)
            {
            
                <option value="@two.ProductId">@two.Name</option>
            }
        </select>
        <input type="submit" value="Order" class="btn btn-primary">
    </div>

</form>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Customer Name</th>
      <th scope="col">Product</th>
      <th scope="col">Quantity</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      @foreach(Order three in ViewBag.allOrders)
      {
    <tr>
      <td>@three.Customer.Name</td>
      <td>@three.Product.Name</td>
      <td>@three.Quantity</td>
      <td>@three.CreatedAt.ToString("MMM d, yyyy")</td>
    </tr>

      }
  </tbody>
</table>