@model Customer
<p class="h2 mb-5">
    <span >
        <a href="success"> Dashboard</a>
    </span>
    <span  >
       <a href="newProduct" class="ml-2">Products</a> 
    </span>
    <span  class="ml-2">
       <a href="newOrder" class="ml-2">Orders</a> 
    </span>
    <span >
       <a  class="ml-2">Customers</a> 
    </span>
    <span >
       <a href="#" class="ml-2">Settings</a> 
    </span>
    <span class="float-right">
        <a href="logout" class="h4 ml-5">Logout</a>
    </span>
</p>

<p class="h4">Add a new Customer</p>
<form action="addCustomer" method="post">
    <span asp-validation-for="Name" class="text-danger"></span>
    <div>
        Customer Name: 
        <input type="text" asp-for="Name">
        <input type="submit" value="Add" class="btn btn-primary">
    </div>
</form>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Customer Name</th>
      <th scope="col">Created Date</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      @foreach(Customer one in ViewBag.allCustomers)
      {
    <tr>
      <td>@one.Name</td>
      <td>@one.CreatedAt.ToString("MMM d,  yyyy")</td>
      <td><a href="/removeCustomer/@one.CustomerId" class="btn btn-danger">Remove</a></td>
    </tr>

      }
  </tbody>
</table>